{
  "compilerOptions": {
    // We don't want to check node_modules
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "module": "nodenext",
    // Node.js 18 supports up to ES2022 according to https://www.npmjs.com/package/@tsconfig/node18
    "target": "es2022",
    "lib": ["ESNext", "dom"],
    "resolveJsonModule": true,
    "strict": true,
    "verbatimModuleSyntax": true
  }
}
