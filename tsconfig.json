{
  "compilerOptions": {
    // We don't want to check node_modules
    "skipLibCheck": true,
    "module": "node18",
    // Node.js 20 at https://node.green/#ES2023
    "target": "es2023",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "strict": true,
    "verbatimModuleSyntax": true
  }
}
